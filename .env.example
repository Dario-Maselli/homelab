# Secrets
DISCORD_WEBHOOK=https://discord.com/api/webhooks/xxxxx
EMAIL_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=you@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=homelab-watcher@local
EMAIL_TO=you@example.com,alerts@example.com
EMAIL_STARTTLS=true

# Project wires
REPO_URL=git@github.com:Dario-Maselli/homelab.git
BRANCH=main
# On Windows you can use a normal pathâ€¦ use quotes if spaces
WORKTREE_PATH=C:\Users\Public\homelab_worktree

# Optional global overrides
HOMELAB_BASE_DIR=~/.homelab_watcher
HOMELAB_ENV_FILE=~/.homelab_watcher/.env
HOMELAB_CONFIG=~/.homelab_watcher/watcher.yml
POLL_INTERVAL_SECONDS=20
DOCKER_READY_TIMEOUT=120
COMPOSE_TIMEOUT=300
DISCOVERY_DEPTH=2
